<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/cardMarginVertical"
        android:layout_marginLeft="@dimen/cardMarginHorizontal"
        android:layout_marginRight="@dimen/cardMarginHorizontal"
        android:layout_marginTop="@dimen/cardMarginVertical"
        android:paddingBottom="16dp"
        app:cardCornerRadius="2dp"
        app:cardElevation="2dp"
        app:cardPreventCornerOverlap="true"
        app:contentPadding="0dp">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <ImageView
                android:id="@+id/image"
                android:layout_marginTop="25dp"
                android:layout_width="100dp"
                android:layout_height="85dp"


                android:src="@drawable/icon_malzemeiste"
                android:layout_alignParentEnd="true"
                android:layout_alignParentStart="true"

                android:layout_alignParentRight="true"
                android:layout_alignParentLeft="true"
                />

        <TextView

                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                android:layout_width="match_parent"
                android:id="@+id/First_Text"
                android:textSize="16sp"
                android:gravity="center"
                android:layout_below="@+id/image"
                android:layout_marginTop="17dp"
                android:text="Mesai Saatlerimiz Saat :  08:30 – 18:30 Arasıdır."
                android:layout_height="wrap_content"/>


    </RelativeLayout>

    <RelativeLayout
            android:background="?android:selectableItemBackground"
            android:clickable="true"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:id="@+id/mail_bilgi"
            android:padding="2dp"
            android:layout_marginTop="180dp">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:textSize="16sp"
                android:text="Email  info@malzemeiste.net"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:id="@+id/email_text"/>
        <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginEnd="16dp"
                android:src="@drawable/send_email"
                android:clickable="true"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"

                android:id="@+id/email_send"
                android:layout_marginRight="16dp"
                android:layout_alignParentRight="true"/>

        <!--     <View
                     android:id="@+id/view_separator1"
                     android:layout_width="match_parent"
                     android:layout_height="1dp"
                     android:layout_marginStart="16dp"
                     android:layout_marginEnd="16dp"

                     android:layout_alignParentBottom="true"
                     android:background="@color/colorGrey"
                     tools:ignore="RtlHardcoded"/>-->
    </RelativeLayout>
    <RelativeLayout
            android:background="?android:selectableItemBackground"
            android:clickable="true"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:id="@+id/call_bilgi"
            android:padding="2dp"
            android:layout_marginTop="220dp">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:textSize="16sp"
                android:text="Telefon  0 (212) 438 48 29"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:id="@+id/tel_text"/>

        <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginEnd="16dp"
                android:src="@drawable/call"
                android:background="?android:selectableItemBackgroundBorderless"
                android:clickable="true"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"

                android:id="@+id/call_tel"/>

        <!--     <View
                     android:id="@+id/view_separator1"
                     android:layout_width="match_parent"
                     android:layout_height="1dp"
                     android:layout_marginStart="16dp"
                     android:layout_marginEnd="16dp"

                     android:layout_alignParentBottom="true"
                     android:background="@color/colorGrey"
                     tools:ignore="RtlHardcoded"/>-->
    </RelativeLayout>


    <View
            android:id="@+id/view_separators"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="270dp"

            android:layout_marginRight="20dp"
            android:background="@color/colorGrey"
            tools:ignore="RtlHardcoded"/>

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="vertical"

            android:layout_marginTop="290dp">

        <com.google.android.gms.maps.MapView
                android:id="@+id/map_address"

                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="5dp"

                android:layout_alignParentTop="true"

                android:layout_alignParentStart="true"/>

        <TextView
                android:text="Procolor Bilgisayar Sistemleri Reklamcılık \n\nMatbaacılık İnş. Otom. Zirai Mah. Taşımacılık Optik \n\nve Elekt. Özel Eğit. Hiz. San. Tic.Ltd.Şti Hacıilyas Mah. \n\nE.Cezavi Sok. Vardar Apt. No:6/A Bursa OSMANGAZİ \n\nBURSA / Türkiye \n\nULUDAĞ 73300623 \n\n\n"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:layout_marginTop="7dp"
                android:id="@+id/address_decription"
                android:gravity="fill_horizontal"

                android:layout_marginEnd="16dp"
                android:layout_marginStart="16dp"
                android:layout_below="@+id/map_address"
                android:layout_alignParentStart="true"/>


    </RelativeLayout>


</android.support.v7.widget.CardView>

