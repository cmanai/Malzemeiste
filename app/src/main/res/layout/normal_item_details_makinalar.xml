<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:app="http://schemas.android.com/apk/res-auto"
                                    xmlns:tools="http://schemas.android.com/tools"
                                    android:id="@+id/normal_item_details_makinalar_cardview"
                                    android:layout_width="match_parent"

                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="@dimen/cardMarginVertical"
                                    android:layout_marginLeft="@dimen/cardMarginHorizontal"
                                    android:layout_marginRight="@dimen/cardMarginHorizontal"
                                    android:layout_marginTop="@dimen/cardMarginVertical"
                                    app:cardCornerRadius="2dp"
                                    app:cardElevation="2dp"

                                    app:cardPreventCornerOverlap="false"
                                    app:contentPadding="0dp">


    <RelativeLayout
            android:layout_width="match_parent"
            android:id="@+id/normal_item_details_makinalar_layout"
            android:clickable="true"

            android:layout_height="wrap_content">

        <ImageView
                android:id="@+id/normal_item_details_makinalar_image"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/icon_malzemeiste"

                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                />


        <RelativeLayout
                android:background="#09000000"
                android:layout_width="match_parent"


                android:layout_gravity="bottom"
                android:layout_height="150dp">
            <!--
                        <RelativeLayout
                                android:background="#50000000"
                                android:layout_width="match_parent"
                                android:elevation="5dp"
                                android:gravity="center_horizontal|center_vertical"
                                android:layout_height="50dp">



                        </RelativeLayout>-->
            <!--   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="12 december 2016"
                       android:textSize="18sp"
                       android:textStyle="bold"
                       android:id="@+id/detail_more_text"
                       android:textColor="@color/md_white_1000"/>-->


        </RelativeLayout>


        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:gravity="start"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="5dp"
                android:id="@+id/normal_item_details_makinalar_title"
                android:layout_marginStart="5dp"
                android:layout_marginLeft="5dp"
                android:layout_below="@+id/normal_item_details_makinalar_image"
                android:textColor="@color/black"
                android:text="Model"/>


        <TextView
                android:id="@+id/normal_item_details_makinalar_ref"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"

                android:layout_marginStart="5dp"
                android:layout_marginLeft="5dp"
                android:textColor="@color/colorText"
                android:text="Kod"
                android:layout_below="@+id/normal_item_details_makinalar_title"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="2dp"/>


        <TextView
                android:id="@+id/normal_item_details_makinalar_fiyat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:layout_marginTop="5dp"
                android:layout_marginStart="5dp"
                android:layout_marginLeft="5dp"
                android:layout_below="@id/normal_item_details_makinalar_ref"
                android:textColor="@color/colorPrimary"
android:textStyle="bold"
                android:text="Fiyat"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                />

        <TextView

                android:id="@+id/more_item_details_makinalar_kdv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:layout_below="@id/normal_item_details_makinalar_ref"
                android:layout_toRightOf="@+id/normal_item_details_makinalar_fiyat"
                android:layout_marginTop="7dp"
                android:layout_marginStart="5dp"
                android:layout_marginLeft="5dp"
                android:textColor="@color/colorText"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"

                android:text="+ KDV"
                />


        <ImageView
                android:layout_width="27dp"
                android:layout_height="27dp"
                android:layout_marginEnd="10dp"
                android:src="@drawable/share"
                android:clickable="true"
                android:layout_marginTop="14dp"
                android:tint="@color/colorText"
                android:layout_below="@id/normal_item_details_makinalar_fiyat"
                android:layout_marginBottom="12dp"

                android:layout_alignParentEnd="true"
                android:id="@+id/normal_item_details_makinalar_share"
                android:layout_marginRight="10dp"
                android:layout_alignParentRight="true"/>

        <View
                android:layout_width="0.5dp"
                android:layout_height="22dp"
                android:layout_toStartOf="@id/normal_item_details_makinalar_share"
                android:layout_below="@id/normal_item_details_makinalar_fiyat"
                android:layout_marginTop="18dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="12dp"
                android:background="@color/colorGrey"
                android:id="@+id/separator1"
                tools:ignore="RtlHardcoded"
                android:layout_toLeftOf="@id/normal_item_details_makinalar_share"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="10dp"/>

        <ImageView
                android:layout_width="27dp"
                android:layout_height="27dp"
                android:layout_marginEnd="5dp"
                android:layout_marginTop="14dp"
                android:src="@drawable/send_email"
                android:clickable="true"

                android:layout_below="@id/normal_item_details_makinalar_fiyat"
                android:layout_marginBottom="12dp"
                android:layout_toStartOf="@id/separator1"
                android:id="@+id/normal_item_details_makinalar_email"
                android:layout_marginRight="5dp"
                android:layout_toLeftOf="@id/separator1"/>

        <View
                android:layout_width="0.5dp"
                android:layout_height="22dp"
                android:layout_toStartOf="@id/normal_item_details_makinalar_email"
                android:layout_below="@id/normal_item_details_makinalar_fiyat"
                android:layout_marginTop="18dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="12dp"
                android:background="@color/colorGrey"
                android:id="@+id/separator2"
                tools:ignore="RtlHardcoded"
                android:layout_toLeftOf="@id/normal_item_details_makinalar_email"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="10dp"/>

        <ImageView
                android:layout_width="27dp"
                android:layout_height="27dp"
                android:layout_marginEnd="5dp"
                android:src="@drawable/call"
                android:layout_marginTop="14dp"
                android:clickable="true"
                android:layout_below="@id/normal_item_details_makinalar_fiyat"
                android:layout_marginBottom="12dp"
                android:layout_toStartOf="@id/separator2"
                android:id="@+id/normal_item_details_makinalar_call"
                android:layout_marginRight="5dp"
                android:layout_toLeftOf="@id/separator2"/>

    </RelativeLayout>
</android.support.v7.widget.CardView>
