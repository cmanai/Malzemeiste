<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_height="wrap_content">


    <RelativeLayout
            android:id="@+id/makinalar_more_detail_layout"
            android:layout_width="match_parent"

            android:layout_height="wrap_content">


        <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                            xmlns:app="http://schemas.android.com/apk/res-auto"
                                            android:id="@+id/card_view_acilacak"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"

                                            android:layout_marginBottom="@dimen/cardMarginVertical"
                                            android:layout_marginLeft="@dimen/cardMarginHorizontal"
                                            android:layout_marginRight="@dimen/cardMarginHorizontal"
                                            android:layout_marginTop="@dimen/cardMarginVertical"
                                            app:cardCornerRadius="2dp"
                                            app:cardElevation="2dp"
                                            app:cardPreventCornerOverlap="false"
                                            app:contentPadding="0dp">

            <RelativeLayout
                    android:elevation="5dp"
                    android:background="#09000000"
                    android:layout_width="150dp"
                    android:gravity="bottom|fill_vertical"

                    android:layout_centerVertical="true"
                    android:layout_height="match_parent">

            </RelativeLayout>

            <RelativeLayout
                    android:id="@+id/hello"
                    android:paddingBottom="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <ImageView
                        android:id="@+id/makinalar_detail_image"
                        android:layout_width="150dp"
                        android:layout_height="130dp"

                        android:gravity="bottom|fill_vertical"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/icon_malzemeiste"/>


                <TextView
                        android:id="@+id/more_item_details_makinalar_kod"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:layout_marginTop="5dp"
                        android:layout_below="@+id/more_item_details_makinalar_model"
                        android:textColor="@color/colorText"
                        android:layout_marginLeft="160dp"
                        android:layout_marginStart="160dp"
                        android:layout_marginEnd="16dp"
                        android:text="Kod"
                        android:layout_marginRight="16dp"/>


                <TextView
                        android:id="@+id/more_item_details_makinalar_fiyat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:textStyle="bold"

                        android:textColor="@color/colorPrimary"
                        android:layout_marginTop="5dp"
                        android:text="Fiyat"
                        android:layout_below="@+id/more_item_details_makinalar_kod"
                        android:layout_alignStart="@+id/more_item_details_makinalar_kod"
                        android:layout_alignLeft="@+id/more_item_details_makinalar_kod"/>

                <TextView

                        android:id="@+id/more_item_details_yedek_kdv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:layout_marginRight="16dp"
                        android:layout_marginStart="5dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="7dp"
                        android:layout_below="@+id/more_item_details_makinalar_kod"
                        android:layout_toRightOf="@+id/more_item_details_makinalar_fiyat"
                        android:textColor="@color/colorText"
                        android:text="+ KDV"
                        />

                <ImageView
                        android:layout_width="27dp"
                        android:layout_height="27dp"
                        android:layout_marginEnd="10dp"
                        android:src="@drawable/share"
                        android:clickable="true"
                        android:layout_marginBottom="10dp"
                        android:layout_alignParentBottom="true"
                        android:tint="@color/colorText"
                        android:layout_below="@+id/more_item_details_makinalar_fiyat"
                        android:layout_alignParentEnd="true"
                        android:id="@+id/more_item_details_makinalar_share"
                        android:layout_marginRight="10dp"
                        android:layout_alignParentRight="true"/>

                <View
                        android:layout_width="0.5dp"
                        android:layout_height="22dp"
                        android:layout_toStartOf="@id/more_item_details_makinalar_share"
                        android:layout_alignParentBottom="true"
                        android:layout_marginTop="14dp"
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="10dp"
                        android:layout_below="@+id/more_item_details_makinalar_fiyat"

                        android:background="@color/colorGrey"
                        android:layout_marginBottom="10dp"

                        android:id="@+id/separator1"
                        tools:ignore="RtlHardcoded"
                        android:layout_toLeftOf="@id/more_item_details_makinalar_share"
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="5dp"/>

                <ImageView
                        android:layout_width="27dp"
                        android:layout_height="27dp"
                        android:layout_marginEnd="5dp"
                        android:layout_marginTop="10dp"
                        android:src="@drawable/send_email"
                        android:clickable="true"
                        android:layout_marginBottom="20dp"
                        android:layout_below="@+id/more_item_details_makinalar_fiyat"

                        android:layout_alignParentBottom="true"
                        android:layout_toStartOf="@id/separator1"
                        android:id="@+id/more_item_details_makinalar_email"
                        android:layout_marginRight="5dp"
                        android:layout_toLeftOf="@id/separator1"/>

                <View
                        android:layout_width="0.5dp"
                        android:layout_height="22dp"
                        android:layout_toStartOf="@id/more_item_details_makinalar_email"
                        android:layout_alignParentBottom="true"
                        android:layout_marginTop="14dp"
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="10dp"
                        android:background="@color/colorGrey"
                        android:layout_marginBottom="10dp"
                        android:layout_below="@+id/more_item_details_makinalar_fiyat"

                        android:id="@+id/separator2"
                        tools:ignore="RtlHardcoded"
                        android:layout_toLeftOf="@id/more_item_details_makinalar_email"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="10dp"/>

                <ImageView
                        android:layout_width="27dp"
                        android:layout_height="27dp"
                        android:layout_marginEnd="5dp"
                        android:src="@drawable/call"
                        android:layout_marginBottom="10dp"
                        android:clickable="true"
                        android:layout_below="@+id/more_item_details_makinalar_fiyat"

                        android:layout_alignParentBottom="true"
                        android:layout_toStartOf="@id/separator2"
                        android:id="@+id/more_item_details_makinalar_call"
                        android:layout_marginRight="5dp"
                        android:layout_toLeftOf="@id/separator2"/>

                <TextView
                        android:id="@+id/more_item_details_makinalar_model"
                        android:layout_width="wrap_content"

                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:gravity="center_vertical"
                        android:textColor="@color/black"
                        android:text="SPC-0369 Cleaning"
                        android:layout_alignParentTop="true"
                        android:layout_alignStart="@+id/more_item_details_makinalar_kod"
                        android:layout_alignEnd="@+id/more_item_details_makinalar_share"
                        android:layout_alignLeft="@+id/more_item_details_makinalar_kod"
                        android:layout_alignRight="@+id/more_item_details_makinalar_share"/>

            </RelativeLayout>


        </android.support.v7.widget.CardView>
    </RelativeLayout>


</RelativeLayout>